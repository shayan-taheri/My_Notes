  string title;\
  \cf5 int\cf0  year;\
\};\
\
\cf5 struct\cf0  friends_t \{\
  string name;\
  string email;\
  movies_t favorite_movie;\
  \} charlie, maria;\
\
friends_t * pfriends = &charlie;\
\
\pard\pardeftab720

\f0\fs28 \cf0 Then:\
\
\pard\pardeftab720

